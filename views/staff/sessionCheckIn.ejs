
<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(errMsg){ %>
            <div class="container">
                <div class=" mt-4" >
                    <h1 style="font-size:30px "><%= errMsg%></h1>
                    
                </div>
                <div class="mt-4 d-flex align-items-center">
                <p>Để kết thúc phiên làm việc hãy kích vào đây</p>
                <a class=" btn btn-danger mx-2" style="font-size:30px;text-decoration:none;border: solid 1px; " href="/staff/startCheckIn" >Kết thúc phiên</a>
                </div>
            </div>
            <%}else {%>
                
                <%  if(session) { %> 
                    <div class="container">
                        <div class="mt-2 d-flex justify-content-center">
                            <div class="mt-4">
                                <div class="d-flex">
                                    <p style="font-size:25px">Tên nhân viên:</p> <p style="font-size:25px ; color: rgb(13, 156, 108); margin-left: 5px;"> <%= staffName %></p>
                                </div>
                                <div class="d-flex">

                                    <p style="font-size:25px">Nơi làm việc:</p><p style="font-size:25px ; color: rgb(13, 156, 108); margin-left: 5px;"> <%= session.workPlace %></p>
                                </div>
                                <div class="d-flex">

                                    <p style="font-size:25px">Thời gian bắt đầu làm việc:</p><p style="font-size:25px ; color: rgb(13, 156, 108); margin-left: 5px;"><%= session.checkIn.getHours().toString().concat(":").concat(session.checkIn.getMinutes()>=10?session.checkIn.getMinutes().toString():"0"+session.checkIn.getMinutes() ) %></p>
                                </div>
                                <div class="d-flex">

                                    <p style="font-size:25px">Trạng thái:</p><p style="font-size:25px ; color: rgb(13, 156, 108); margin-left: 5px;">> Đang làm việc</p>
                                </div>
                                <div class="d-flex">

                                </div>
                                <p style="font-size:25px; color: rgb(219, 71, 26);">Cho phép làm việc nhiều lần</h4>
                            </div>
                     </div>
                            <div class=" mt-2 d-flex justify-content-center" >
                                <form action="/staff/update-session" method="POST">
                                <input type="hidden" value="<%= session._id %>" name="sessionId">
                                <button class="btn-danger" type="submit">Kết thúc phiên</button>
                                </form>
                            </div>
                    </div>
                    <%} else {
                        %> 
                        <h1> Không tồn tại phiên làm việc</h1>
                        <%
                    }
                %>
                <%}
        %>
    </main>
    <%- include('../includes/end.ejs') %>