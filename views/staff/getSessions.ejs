
<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
       <%
       if(errMsg){%>
        <div class="container">
          <h4><%= errMsg %></h4>
        </div>
        <%}else {
          %>
          <%  if(sessions.length>0) { %> 
            <div class="container">
                <h1 class="mt-2 d-flex justify-content-center text-uppercase">Bảng thời gian làm việc</h1>
                <hr/>
                <div class="mt-2 pd-2 ">
                    <div style="font-size:25px">Tên nhân viên: <%= staffName %></div>
                    <div style="font-size:25px">Tổng thời gian làm việc: <%= tongWorkTimes %> (h)</div>
                    <div style="font-size:25px">Trạng thái làm việc: Chưa làm việc</div>
                </div>
                <hr/>
                <div class="mt-4 d-flex justify-content-center">
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                              <th scope="col">NO.</th>
                              <th scope="col">Bắt đầu</th>
                              <th scope="col">Kết thúc</th>
                              <th scope="col">Nơi làm việc</th>
                            </tr>
                          </thead>
                       
                          <tbody>
                            <%
                            sessions.forEach(session=> { %>

                              <tr>
                                <th scope="row"><%= sessions.findIndex(s=>s===session)+1 %></th>
                                <td> <%= session.checkIn.getHours()
                                  .toString()
                                  .concat(" : " + session.checkIn.getMinutes()) %></td>
                                <td> <%= session.checkOut.getHours()
                                  .toString()
                                  .concat(" : " + session.checkOut.getMinutes()) %></td>
                                <td><%= session.workPlace %></td>
                              </tr>
                              <%}
                              )
                           %>
                        
                         
                          </tbody>
                      </table>
                </div>   
                
            </div>
            <%} else {
                %> 
                <h1> Không tồn tại phiên làm việc</h1>
                <%
            }
        %>
          <%
        }
       %>

        
    </main>
    <%- include('../includes/end.ejs') %>